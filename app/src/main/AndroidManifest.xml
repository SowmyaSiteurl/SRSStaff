<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="www.siteurl.in.srsstaff">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".activities.SRSStaffApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.StaffLogin"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".activities.ConnectivityReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <activity android:name=".activities.MainActivity" />
        <activity
            android:name=".activities.ViewProfile"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.ChangePasswordActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.ViewAssignedTickets"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.TicketDetails"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.OpenTickets"
            android:parentActivityName=".activities.MainActivity" />
    </application>

</manifest>